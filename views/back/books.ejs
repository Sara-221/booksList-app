<%- include ('./templates/header') %> 

<main class="container my-5">
    <h1>Books List</h1>
    <p>Here you can manage your books. Click to add, edit or delete any of them.</p>
    <hr>
    <table class="table table-bordered table-sm myTable">
        <thead>
            <tr class="table-success">
                <th class="fw-bold">Title</th>
                <th class="fw-bold">Author</th>
                <th class="fw-bold">Description</th>
                <th class="fw-bold">Categories</th>
                <th class="fw-bold">Publish Date</th>
                <th class="fw-bold">Pages</th>
                <!-- <th>ISBN</th> -->
            </tr>
        </thead>
        <tbody>
            <% books.forEach(({title,author,description,categories,publishDate,pages,id}) => { %>
                    <tr>
                        <td class="align-middle"><%= title %> </td>
                        <td class="align-middle"><%= author %> </td>
                        <td class="align-middle"><%= description %> </td>
                        <td><%= categories %> </td>
                        <td><%= publishDate %> </td>
                        <td><%= pages %> </td>
                        <div>
                            <td class="align-middle">
                                <a href="editbook/<%= id %> "><i class="fa-solid fa-pen"></i></a>
                                <a href="seebook/<%= id %> "><i class="fa-regular fa-eye"></i></a>
                                <a href="deletebook/<%= id %> "><i class="fa-solid fa-trash"></i></a>
                            </td>
                        </div>
                    </tr>
                <% }) %>
        </tbody>
        <div class="d-flex justify-content-end my-3">
            <a class="btn btn-success btn-sm" href="addbook">
                Add a new book
            </a>
        </div>

    </table>
</main>


<%- include ('./templates/footer') %> 

